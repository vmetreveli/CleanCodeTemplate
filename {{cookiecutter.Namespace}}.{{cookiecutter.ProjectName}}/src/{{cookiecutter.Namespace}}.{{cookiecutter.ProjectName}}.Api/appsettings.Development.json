  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Elasticsearch"
    ],
    "MinimumLevel": "Debug",
    "Enrich": [
      "WithMachineName",
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "https://elastic-test.caucasusauto.com",
          "indexFormat": "notifications-dev-{0:yyyy.MM}",
          "restrictedToMinimumLevel": "Warning",
          "emitEventFailure": "WriteToSelfLog,WriteToFailureSink",
          "failureSink": {
            "type": "Serilog.Sinks.File.FileSink, Serilog.Sinks.File",
            "path": "elastic-failure.log",
            "fileSizeLimitBytes": 1000000,
            "rollingInterval": "Day",
            "textFormatter": "Serilog.Formatting.Json.JsonFormatter"
          }
        }
      }
    ]
  },
